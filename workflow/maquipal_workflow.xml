<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record model="workflow" id="wkf_maquipal">
    		<field name="name">Workflow de Maquipal</field>
    		<field name="osv">maquipal.nota</field>
    		<field name="on_create">True</field>
    	</record>

        <!-- Nodos -->
        <record id="act_borrador" model="workflow.activity">
            <field name="wkf_id" ref="wkf_maquipal"/>
            <field name="name">borrador</field>
            <field name="kind">function</field>
            <field name="action">action_borrador()</field>
            <field name="flow_start">True</field>
        </record>
        <record id="act_gestion" model="workflow.activity">
            <field name="wkf_id" ref="wkf_maquipal"/>
            <field name="name">gestion</field>
            <field name="kind">function</field>
            <field name="action">action_gestion()</field>
        </record>
        <record id="act_comercial" model="workflow.activity">
            <field name="wkf_id" ref="wkf_maquipal"/>
            <field name="name">comercial</field>
            <field name="kind">function</field>
            <field name="action">action_comercial()</field>
        </record>
        <record id="act_almacen" model="workflow.activity">
            <field name="wkf_id" ref="wkf_maquipal"/>
            <field name="name">almacen</field>
            <field name="kind">function</field>
            <field name="action">action_almacen()</field>
        </record>
        <record id="act_final" model="workflow.activity">
            <field name="wkf_id" ref="wkf_maquipal"/>
            <field name="name">final</field>
            <field name="kind">function</field>
            <field name="action">action_final()</field>
            <field name="flow_stop">True</field>
        </record>

        <!-- Transiciones -->
        <record id="trans_borrador_gestion" model="workflow.transition">
            <field name="act_from" ref="act_borrador"/>
            <field name="act_to" ref="act_gestion"/>
            <field name="signal">action_gestion</field>
        </record>
        <record id="trans_gestion_borrador" model="workflow.transition">
            <field name="act_from" ref="act_gestion"/>
            <field name="act_to" ref="act_borrador"/>
            <field name="signal">action_borrador</field>
        </record>
        <record id="trans_gestion_comercial" model="workflow.transition">
            <field name="act_from" ref="act_gestion"/>
            <field name="act_to" ref="act_comercial"/>
            <field name="signal">action_comercial</field>
        </record>
        <record id="trans_comercial_gestion" model="workflow.transition">
            <field name="act_from" ref="act_comercial"/>
            <field name="act_to" ref="act_gestion"/>
            <field name="signal">action_gestion</field>
        </record>
        <record id="trans_gestion_almacen" model="workflow.transition">
            <field name="act_from" ref="act_gestion"/>
            <field name="act_to" ref="act_almacen"/>
            <field name="signal">action_almacen</field>
        </record>
        <record id="trans_almacen_gestion" model="workflow.transition">
            <field name="act_from" ref="act_almacen"/>
            <field name="act_to" ref="act_gestion"/>
            <field name="signal">action_gestion</field>
        </record>
        <record id="trans_gestion_final" model="workflow.transition">
            <field name="act_from" ref="act_gestion"/>
            <field name="act_to" ref="act_final"/>
            <field name="signal">action_final</field>
        </record>
        <record id="trans_comercial_final" model="workflow.transition">
            <field name="act_from" ref="act_comercial"/>
            <field name="act_to" ref="act_final"/>
            <field name="signal">action_final</field>
        </record>
        <record id="trans_almacen_final" model="workflow.transition">
            <field name="act_from" ref="act_almacen"/>
            <field name="act_to" ref="act_final"/>
            <field name="signal">action_final</field>
        </record>


